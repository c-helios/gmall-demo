\r\n              <input autocomplete=\"off\" type=\"text\" v-model=\"cartInfo.skuNum\" minnum=\"1\" class=\"itxt\" @change=\"skuNumChange('input',$event.target.value*1,cartInfo)\">\r\n              <a href=\"javascript:void(0)\" class=\"plus\" @click=\"skuNumChange('add',1,cartInfo)\">+</a>\r\n            </li>\r\n            <li class=\"cart-list-con6\">\r\n              <span class=\"sum\">{{cartInfo.skuNum * cartInfo.cartPrice}}</span>\r\n            </li>\r\n            <li class=\"cart-list-con7\">\r\n              <a class=\"sindelet\" @click=\"deleteShopCart(cartInfo.skuId)\">删除</a>\r\n              <br>\r\n              <a href=\"#none\">移到收藏</a>\r\n            </li>\r\n          </ul>\r\n        </template>\r\n      </div>\r\n    </div>\r\n    <div class=\"cart-tool\">\r\n      <div class=\"select-all\">\r\n        <input class=\"chooseAll\" type=\"checkbox\" :checked=\"allChecked\" @click=\"allCheckedBtn\">\r\n        <span>全选</span>\r\n      </div>\r\n      <div class=\"option\">\r\n        <a @click=\"deleteAllCheckedCart\">删除选中的商品</a>\r\n        <a href=\"#none\">移到我的关注</a>\r\n        <a href=\"#none\">清除下柜商品</a>\r\n      </div>\r\n      <div class=\"money-box\">\r\n        <div class=\"chosed\">已选择\r\n          <span>{{checkedSkuNum}}</span>件商品</div>\r\n        <div class=\"sumprice\">\r\n          <em>总价（不含运费） ：</em>\r\n          <i class=\"summoney\">{{checkedTotalPrice}}</i>\r\n        </div>\r\n        <div class=\"sumbtn\">\r\n          <router-link class=\"sum-btn\" to=\"/trade\">结算</router-link>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport {mapGetters} from 'vuex'\r\nimport throttle from 'lodash/throttle'\r\n\r\nexport default {\r\n  name: 'ShopCart',\r\n  mounted() {\r\n    this.getCartList()\r\n  },\r\n  computed: {\r\n    ...mapGetters(['cartInfoList']),\r\n    cartList() {\r\n      return (this.$store.state.shopCart||{}).cartList||[]\r\n    },\r\n    checkedSkuNum() {\r\n      let num = 0\r\n      this.cartList.forEach(cart => {\r\n        cart.cartInfoList.forEach(info=>{\r\n          if (info.isChecked == 1) {\r\n              num += info.skuNum\r\n            }\r\n        })\r\n      });\r\n      return num\r\n    },\r\n    checkedTotalPrice() {\r\n      let totalPrice = 0\r\n      this.cartList.forEach(cart => {\r\n        cart.cartInfoList.forEach(info => {\r\n          if (info.isChecked == 1) {\r\n            totalPrice += info.skuNum * info.cartPrice\r\n          }\r\n        })\r\n      })\r\n      return totalPrice\r\n    },\r\n    allChecked() { \r\n      let isChecked = true\r\n      let length = 0\r\n      this.cartList.forEach(cart => {\r\n        length = cart.cartInfoList.length\r\n        cart.cartInfoList.forEach(info => {\r\n          if (info.isChecked == 0) {\r\n            isChecked = false\r\n          }\r\n        })\r\n      })\r\n      return isChecked && length > 0\r\n    }\r\n  },\r\n  methods: {\r\n    getCartList() {\r\n      this.$store.dispatch('getCartList')\r\n    },\r\n    // 变更选中状态\r\n    async checkedGood(info, event) {\r\n      let isChecked = event.target.checked ? '1':'0'\r\n      // info.isChecked = isChecked\r\n      await this.$store.dispatch('updateCheckCart',{skuId:info.skuId, isChecked})\r\n      this.getCartList()\r\n    },\r\n    // 删除商品\r\n    async deleteShopCart(skuId) {\r\n      await this.$store.dispatch('deleteCart', skuId)\r\n      this.getCartList()\r\n    },\r\n    // 变更商品数量\r\n    skuNumChange: throttle(async function (type, disNum, cart) {\r\n      switch (type) {\r\n        case \"add\":\r\n          // 带给服务器变化量\r\n          disNum = 1\r\n          break;\r\n        case \"minus\":\r\n          // 带给服务器变化量\r\n          if (cart.skuNum > 1) {\r\n            disNum = -1\r\n          } else {\r\n            disNum = cart.skuNum > 1 ? -1 : 0\r\n          }\r\n          break;\r\n        case \"input\":\r\n          if (isNaN(disNum) || disNum < 1) {\r\n            disNum = 0\r\n          } else {\r\n            disNum = parseInt(disNum) - cart.skuNum\r\n          }\r\n      }\r\n      // 派发action\r\n      try {\r\n        // d代表修改成功\r\n        await this.$store.dispatch('addToCart', { skuId: cart.skuId, skuNum: disNum })\r\n        // 再次获取服务器最新的数据进行展示\r\n        this, this.getCartList()\r\n      } catch (error) {\r\n\r\n      }\r\n    }, 1000),\r\n    // 删除全部选中的商品\r\n    async deleteAllCheckedCart () {\r\n      try {\r\n        await this.$store.dispatch('deleteAllCheckedCartByContext')\r\n        this.getCartList()\r\n      } catch (error) {\r\n        alert('error.message')\r\n      }\r\n    },\r\n    // 点击全选\r\n    async allCheckedBtn (event) {\r\n      //  派发action\r\n      try {\r\n        let isChecked = event.target.checked ? '1' : '0'\r\n        await this.$store.dispatch('updateAllChecked', isChecked)\r\n        this.getCartList()\r\n      } catch (error) {\r\n        alert(error.message)\r\n      }\r\n    },\r\n  },\r\n}\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\n.cart {\r\n  width: 1200px;\r\n  margin: 0 auto;\r\n\r\n  h4 {\r\n    margin: 9px 0;\r\n    font-size: 14px;\r\n    line-height: 21px;\r\n  }\r\n\r\n  .cart-main {\r\n    .cart-th {\r\n      background: #f5f5f5;\r\n      border: 1px solid #ddd;\r\n      padding: 10px;\r\n      overflow: hidden;\r\n\r\n      &>div {\r\n        float: left;\r\n      }\r\n\r\n      .cart-th1 {\r\n        width: 25%;\r\n\r\n        input {\r\n          vertical-align: middle;\r\n        }\r\n\r\n        span {\r\n          vertical-align: middle;\r\n        }\r\n      }\r\n\r\n      .cart-th2 {\r\n        width: 25%;\r\n      }\r\n\r\n      .cart-th3,\r\n      .cart-th4,\r\n      .cart-th5,\r\n      .cart-th6 {\r\n        width: 12.5%;\r\n\r\n      }\r\n    }\r\n\r\n    .cart-body {\r\n      margin: 15px 0;\r\n      border: 1px solid #ddd;\r\n\r\n      .cart-list {\r\n        padding: 10px;\r\n        border-bottom: 1px solid #ddd;\r\n        overflow: hidden;\r\n\r\n        &>li {\r\n          float: left;\r\n        }\r\n\r\n        .cart-list-con1 {\r\n          width: 15%;\r\n        }\r\n\r\n        .cart-list-con2 {\r\n          width: 35%;\r\n\r\n          img {\r\n            width: 82px;\r\n            height: 82px;\r\n            float: left;\r\n          }\r\n\r\n          .item-msg {\r\n            float: left;\r\n            width: 150px;\r\n            margin: 0 10px;\r\n            line-height: 18px;\r\n          }\r\n        }\r\n\r\n        .cart-list-con4 {\r\n          width: 10%;\r\n\r\n        }\r\n\r\n        .cart-list-con5 {\r\n          width: 17%;\r\n\r\n          .mins {\r\n            border: 1px solid #ddd;\r\n            border-right: 0;\r\n            float: left;\r\n            color: #666;\r\n            width: 6px;\r\n            text-align: center;\r\n            padding: 8px;\r\n          }\r\n\r\n          input {\r\n            border: 1px solid #ddd;\r\n            width: 40px;\r\n            height: 33px;\r\n            float: left;\r\n            text-align: center;\r\n            font-size: 14px;\r\n          }\r\n\r\n          .plus {\r\n            border: 1px solid #ddd;\r\n            border-left: 0;\r\n            float: left;\r\n            color: #666;\r\n            width: 6px;\r\n            text-align: center;\r\n            padding: 8px;\r\n          }\r\n        }\r\n\r\n        .cart-list-con6 {\r\n          width: 12.5%;\r\n\r\n          .sum {\r\n            font-size: 16px;\r\n          }\r\n        }\r\n\r\n        .cart-list-con7 {\r\n          width: 12.5%;\r\n\r\n          a {\r\n            color: #666;\r\n          }\r\n        }\r\n      }\r\n    }\r\n  }\r\n\r\n  .cart-tool {\r\n    overflow: hidden;\r\n    border: 1px solid #ddd;\r\n\r\n    .select-all {\r\n      padding: 10px;\r\n      overflow: hidden;\r\n      float: left;\r\n\r\n      span {\r\n        vertical-align: middle;\r\n      }\r\n\r\n      input {\r\n        vertical-align: middle;\r\n      }\r\n    }\r\n\r\n    .option {\r\n 