{"ast":null,"code":"//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\nimport { mapGetters } from 'vuex';\nimport throttle from 'lodash/throttle';\nexport default {\n  name: 'ShopCart',\n\n  mounted() {\n    this.getCartList();\n  },\n\n  computed: { ...mapGetters(['cartInfoList']),\n\n    cartList() {\n      return (this.$store.state.shopCart || {}).cartList || [];\n    },\n\n    checkedSkuNum() {\n      let num = 0;\n      this.cartList.forEach(cart => {\n        cart.cartInfoList.forEach(info => {\n          if (info.isChecked == 1) {\n            num += info.skuNum;\n          }\n        });\n      });\n      return num;\n    },\n\n    checkedTotalPrice() {\n      let totalPrice = 0;\n      this.cartList.forEach(cart => {\n        cart.cartInfoList.forEach(info => {\n          if (info.isChecked == 1) {\n            totalPrice += info.skuNum * info.cartPrice;\n          }\n        });\n      });\n      return totalPrice;\n    },\n\n    allChecked() {\n      let isChecked = true;\n      let length = 0;\n      this.cartList.forEach(cart => {\n        length = cart.cartInfoList.length;\n        cart.cartInfoList.forEach(info => {\n          if (info.isChecked == 0) {\n            isChecked = false;\n          }\n        });\n      });\n      return isChecked && length > 0;\n    }\n\n  },\n  methods: {\n    getCartList() {\n      this.$store.dispatch('getCartList');\n    },\n\n    // 变更选中状态\n    async checkedGood(info, event) {\n      let isChecked = event.target.checked ? '1' : '0'; // info.isChecked = isChecked\n\n      await this.$store.dispatch('updateCheckCart', {\n        skuId: info.skuId,\n        isChecked\n      });\n      this.getCartList();\n    },\n\n    // 删除商品\n    async deleteShopCart(skuId) {\n      await this.$store.dispatch('deleteCart', skuId);\n      this.getCartList();\n    },\n\n    // 变更商品数量\n    skuNumChange: throttle(async function (type, disNum, cart) {\n      switch (type) {\n        case \"add\":\n          // 带给服务器变化量\n          disNum = 1;\n          break;\n\n        case \"minus\":\n          // 带给服务器变化量\n          if (cart.skuNum > 1) {\n            disNum = -1;\n          } else {\n            disNum = cart.skuNum > 1 ? -1 : 0;\n          }\n\n          break;\n\n        case \"input\":\n          if (isNaN(disNum) || disNum < 1) {\n            disNum = 0;\n          } else {\n            disNum = parseInt(disNum) - cart.skuNum;\n          }\n\n      } // 派发action\n\n\n      try {\n        // d代表修改成功\n        await this.$store.dispatch('addToCart', {\n          skuId: cart.skuId,\n          skuNum: disNum\n        }); // 再次获取服务器最新的数据进行展示\n\n        this, this.getCartList();\n      } catch (error) {}\n    }, 1000),\n\n    // 删除全部选中的商品\n    async deleteAllCheckedCart() {\n      try {\n        await this.$store.dispatch('deleteAllCheckedCartByContext');\n        this.getCartList();\n      } catch (error) {\n        alert('error.message');\n      }\n    },\n\n    // 点击全选\n    async allCheckedBtn(event) {\n      //  派发action\n      try {\n        let isChecked = event.target.checked ? '1' : '0';\n        await this.$store.dispatch('updateAllChecked', isChecked);\n        this.getCartList();\n      } catch (error) {\n        alert(error.message);\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAoEA;AACA;AAEA;EACAA,gBADA;;EAEAC;IACA;EACA,CAJA;;EAKAC,YACA,+BADA;;IAEAC;MACA;IACA,CAJA;;IAKAC;MACA;MACA;QACAC;UACA;YACAC;UACA;QACA,CAJA;MAKA,CANA;MAOA;IACA,CAfA;;IAgBAC;MACA;MACA;QACAF;UACA;YACAG;UACA;QACA,CAJA;MAKA,CANA;MAOA;IACA,CA1BA;;IA2BAC;MACA;MACA;MACA;QACAC;QACAL;UACA;YACAM;UACA;QACA,CAJA;MAKA,CAPA;MAQA;IACA;;EAvCA,CALA;EA8CAC;IACAC;MACA;IACA,CAHA;;IAIA;IACA;MACA,iDADA,CAEA;;MACA;QAAAC;QAAAH;MAAA;MACA;IACA,CA